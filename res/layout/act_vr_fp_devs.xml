<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#ffffff">

     <Button
        android:id="@+id/fp_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:text="" />
       

     <Button
        android:id="@+id/fp_devs_mypc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 		android:layout_alignParentTop="true"
 		android:layout_marginTop="5dp"
 		android:layout_marginRight="3dp"
 		android:layout_alignParentRight="true"
 		android:textSize="19sp"
 		android:textColor="@color/cor3"
        android:text="根目录" />
 
     <TextView 
         android:id="@+id/curpath"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/fp_exit"
         android:layout_toLeftOf="@id/fp_devs_mypc"
         android:layout_alignBottom="@id/fp_devs_mypc"
         android:textSize="18sp"/>
          
     <View 
         android:id="@+id/divider"
         android:layout_width="fill_parent"
         android:layout_height="1dp"
         android:background="#000000"
         android:layout_below="@id/fp_exit"
         android:layout_marginTop="3dp"/>
    <ListView
        android:id="@+id/fp_devs_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        
        android:layout_below="@id/divider"
        android:layout_marginTop="0dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/line_1"
        android:dividerHeight="1.0dip"
        android:fastScrollEnabled="false"
        android:scrollbars="vertical" />

</RelativeLayout>