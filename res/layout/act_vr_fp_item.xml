<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spa3"
    android:paddingRight="22.0dip"
    android:paddingTop="@dimen/spa3"
    android:orientation="horizontal">"

    <ImageView
        android:id="@+id/act_vr_fp_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad1"
        android:layout_marginRight="@dimen/pad2"
        android:layout_gravity="left"
        android:scaleType="centerCrop" />
 

     <TextView
         android:id="@+id/act_vr_fp_item_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:layout_gravity="center_vertical"
         android:textColor="@color/cor3"
         android:textSize="@dimen/siz1"
         android:textStyle="bold" />
 
  
</LinearLayout>
